<%= form_with(model: player, local: true) do |form| %>
    <% if player.errors.any? %>
      <div id="error_explanation">
        <h2>Kļūdas saglabājot:</h2>
  
        <ul>
        <% player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :name, "Vārds, uzvārds" %>
      <%= form.text_field :name %>
    </div>
  
    <div class="field">
      <%= form.label :number, "Spēlētāja numurs" %>
      <%= form.number_field :number %>
    </div>

    <div class="field">
      <%= form.label :position, "Pozīcija" %>
      <%= form.text_field :position %>
    </div>

    <div class="field">
      <%= form.label :club, "Klubs" %>
      <%= form.text_field :club %>
    </div>

    <div class="field">
      <%= form.label :team_id, "Komanda" %>
      <%= form.collection_select(:team_id, Team.all, :id, :title, prompt: true) %>
    </div>
  
    <div class="actions">
      <%= form.submit 'Saglabāt' %>
    </div>

  <% end %>
  